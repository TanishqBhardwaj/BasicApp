<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_popular_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            android:background="#191919"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="Popular"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_popular_tv"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#191919"
            app:layout_constraintTop_toBottomOf="@+id/text_popular_tv"
            tools:layout_editor_absoluteX="29dp" />

        <TextView
            android:id="@+id/text_popularblank_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#191919"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_popular_tv"
            tools:layout_editor_absoluteX="62dp" />

        <TextView
            android:id="@+id/text_top_rated_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#191919"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="Top Rated"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/text_popularblank_tv" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_top_rated_tv"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#191919"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_top_rated_tv" />


        <TextView
            android:id="@+id/text_topratedblank_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#191919"
            android:paddingLeft="8dp"
            android:textSize="15dp"
            android:paddingTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_top_rated_tv"
            tools:layout_editor_absoluteX="-16dp" />


        <TextView
            android:id="@+id/text_airing_today_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#191919"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="Airing Today"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_topratedblank_tv" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_airing_today_tv"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#191919"
            app:layout_constraintTop_toBottomOf="@+id/text_airing_today_tv" />

        <TextView
            android:id="@+id/text_airingtodayblank_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#191919"
            android:textSize="15dp"

            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_airing_today_tv"
            tools:layout_editor_absoluteX="0dp" />


        <TextView
            android:id="@+id/text_latest_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#191919"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="Latest TV Shows"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/text_airingtodayblank_tv" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_latest_tv"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#191919"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_latest_tv" />

        <TextView
            android:id="@+id/text_latestblank_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#191919"
            android:textSize="15dp"

            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_latest_tv"
            tools:layout_editor_absoluteX="0dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

