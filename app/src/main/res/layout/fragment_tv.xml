<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_popular_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            android:background="#191919"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="Popular"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_popular_tv"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#191919"
            app:layout_constraintTop_toBottomOf="@+id/text_popular_tv"
            tools:layout_editor_absoluteX="29dp" />

        <ProgressBar
            android:id="@+id/progress_bar_popular_tv"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/recycler_view_popular_tv"
            app:layout_constraintEnd_toEndOf="@id/recycler_view_popular_tv"
            app:layout_constraintStart_toStartOf="@id/recycler_view_popular_tv"
            app:layout_constraintTop_toTopOf="@id/recycler_view_popular_tv"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/text_popularblank_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#191919"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_popular_tv"
            tools:layout_editor_absoluteX="62dp" />

        <TextView
            android:id="@+id/text_top_rated_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#191919"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="Top Rated"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/text_popularblank_tv" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_top_rated_tv"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#191919"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_top_rated_tv" />

        <ProgressBar
            android:id="@+id/progress_bar_top_rated_tv"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/recycler_view_top_rated_tv"
            app:layout_constraintEnd_toEndOf="@id/recycler_view_top_rated_tv"
            app:layout_constraintStart_toStartOf="@id/recycler_view_top_rated_tv"
            app:layout_constraintTop_toTopOf="@id/recycler_view_top_rated_tv"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/text_topratedblank_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#191919"
            android:paddingLeft="8dp"
            android:textSize="15dp"
            android:paddingTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_top_rated_tv"
            tools:layout_editor_absoluteX="-16dp" />


        <TextView
            android:id="@+id/text_airing_today_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#191919"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="Airing Today"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_topratedblank_tv" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_airing_today_tv"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#191919"
            app:layout_constraintTop_toBottomOf="@+id/text_airing_today_tv" />

        <ProgressBar
            android:id="@+id/progress_bar_airing_today_tv"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/recycler_view_airing_today_tv"
            app:layout_constraintEnd_toEndOf="@id/recycler_view_airing_today_tv"
            app:layout_constraintStart_toStartOf="@id/recycler_view_airing_today_tv"
            app:layout_constraintTop_toTopOf="@id/recycler_view_airing_today_tv"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/text_airingtodayblank_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#191919"
            android:textSize="15dp"

            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_airing_today_tv"
            tools:layout_editor_absoluteX="0dp" />


        <TextView
            android:id="@+id/text_latest_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#191919"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="Latest TV Shows"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/text_airingtodayblank_tv" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_latest_tv"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#191919"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_latest_tv" />

        <ProgressBar
            android:id="@+id/progress_bar_latest_tv"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/recycler_view_latest_tv"
            app:layout_constraintEnd_toEndOf="@id/recycler_view_latest_tv"
            app:layout_constraintStart_toStartOf="@id/recycler_view_latest_tv"
            app:layout_constraintTop_toTopOf="@id/recycler_view_latest_tv"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/text_latestblank_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#191919"
            android:textSize="15dp"

            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_latest_tv"
            tools:layout_editor_absoluteX="0dp" />
        <TextView
            android:id="@+id/text_view_follow_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#191919"
            android:gravity="center"
            android:padding="16dp"
            android:text="Follow And Contact Movie Mate On:"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_latestblank_tv" />

        <ImageView
            android:id="@+id/facebook3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="50dp"

            android:onClick="moviemateFacebookClick"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/insta3"
            app:layout_constraintTop_toBottomOf="@+id/text_view_follow_us"
            app:srcCompat="@drawable/facebook" />

        <ImageView
            android:id="@+id/insta3"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginTop="8dp"

            android:onClick="moviemateInstaClick"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_follow_us"
            app:srcCompat="@drawable/insta" />

        <ImageView
            android:id="@+id/gmail3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="6dp"
            android:onClick="sakshiGmailClick"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            app:layout_constraintStart_toEndOf="@+id/insta3"
            app:layout_constraintTop_toBottomOf="@+id/text_view_follow_us"
            app:srcCompat="@drawable/gmail" />

        <TextView
            android:id="@+id/text_view_followusblank"
            android:layout_width="match_parent"
            android:layout_height="30dp"


            android:layout_marginTop="15dp"

            android:background="#191919"

            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/insta3" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

