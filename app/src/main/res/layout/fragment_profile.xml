<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="Profile"
            android:textColor="@color/colorhead"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/line5"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:background="@color/colorhead"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Account" />

        <ImageView
            android:id="@+id/harryImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line5"
            app:srcCompat="@drawable/harry" />

        <ImageView
            android:id="@+id/profileLogo"

            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="73dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/harryImage"
            app:srcCompat="@drawable/profilelogo" />

        <TextView
            android:id="@+id/harryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:text="Harry Potter"
            android:textColor="@color/colorhead"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/harryImage" />

        <ImageView
            android:id="@+id/gmailicon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="73dp"
            android:layout_marginTop="16dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileLogo"
            app:srcCompat="@drawable/gmail" />


        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="20dp"
            android:text="harrypotter77@gmail.com"
            android:textColor="@color/colorhead"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/harryName" />


        <ImageView
            android:id="@+id/phoneicon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="73dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gmailicon"
            app:srcCompat="@drawable/phonelogo" />

        <TextView
            android:id="@+id/contactNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="20dp"
            android:text="+44 7774532645"
            android:textColor="@color/colorhead"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email" />

        <ImageView
            android:id="@+id/locationaLogo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="73dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phoneicon"
            app:srcCompat="@drawable/locationlogo" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="20dp"
            android:text="Hogwarts , UK"

            android:textColor="@color/colorhead"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contactNo" />

        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorhead"
            app:layout_constraintTop_toBottomOf="@+id/locationaLogo"
            tools:layout_editor_absoluteX="0dp" />


        <ImageView
            android:id="@+id/addAccountLogo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="73dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line4"
            app:srcCompat="@drawable/addaccountlogo" />

        <TextView
            android:id="@+id/addAcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"

            android:layout_marginTop="10dp"
            android:text="Add Account Using:"
            android:textColor="@color/colorhead"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line4" />

        <ImageView
            android:id="@+id/insta1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="256dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="15dp"
            android:onClick="harryInstaClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addAcount"
            app:srcCompat="@drawable/insta" />

        <ImageView
            android:id="@+id/facebook1"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_marginStart="164dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="15dp"
            android:onClick="harryFacebookClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addAcount"
            app:srcCompat="@drawable/facebook" />

        <ImageView
            android:id="@+id/gmail1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="15dp"
            android:onClick="harryGmailClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addAcount"
            app:srcCompat="@drawable/gmail" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>