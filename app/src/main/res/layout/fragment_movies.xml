<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_popular_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            android:background="#191919"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="Popular Movies"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_popular_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#191919"
            app:layout_constraintTop_toBottomOf="@+id/text_popular_movie"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/text_popularblank_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#191919"
            android:paddingLeft="8dp"

            android:paddingTop="8dp"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_popular_movie"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/text_top_rated_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#191919"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="Top Rated Movies"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/text_popularblank_movie"
            tools:layout_editor_absoluteX="16dp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_top_rated_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#191919"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_top_rated_movie" />

        <TextView
            android:id="@+id/text_topratedblank_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#191919"

            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:textColor="@android:color/white"

            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_top_rated_movie"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/text_upcoming_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#191919"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="Upcoming Movies"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/text_topratedblank_movie" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_upcoming_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#191919"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_upcoming_movie" />

        <TextView
            android:id="@+id/text_upcomingblank_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="#191919"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"

            android:textColor="@android:color/white"

            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_upcoming_movie"
            tools:layout_editor_absoluteX="59dp" />

        <TextView
            android:id="@+id/text_now_playing_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#191919"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="Now Playing Movies"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/text_upcomingblank_movie"
            tools:layout_editor_absoluteX="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_now_playing_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#191919"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_now_playing_movie" />

        <TextView
            android:id="@+id/text_latestblank_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="#191919"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"

            android:textColor="@android:color/white"

            android:textSize="15dp"

            app:layout_constraintTop_toBottomOf="@+id/recycler_view_now_playing_movie"
            tools:layout_editor_absoluteX="16dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>