<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
            android:id="@+id/text_popular_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            android:background="#191919"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="Popular Movies"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_popular_movie"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#191919"
            app:layout_constraintTop_toBottomOf="@+id/text_popular_movie" />
    <TextView
        android:id="@+id/text_popularblank_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#191919"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_popular_movie"
        tools:layout_editor_absoluteX="62dp" />


    <ProgressBar
        android:id="@+id/progress_bar_popular_movie"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/recycler_view_popular_movie"
        app:layout_constraintEnd_toEndOf="@id/recycler_view_popular_movie"
        app:layout_constraintStart_toStartOf="@id/recycler_view_popular_movie"
        app:layout_constraintTop_toTopOf="@id/recycler_view_popular_movie"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_top_rated_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#191919"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:text="Top Rated Movies"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_popularblank_movie" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_top_rated_movie"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#191919"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_top_rated_movie" />

    <ProgressBar
        android:id="@+id/progress_bar_top_rated_movie"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/recycler_view_top_rated_movie"
        app:layout_constraintEnd_toEndOf="@id/recycler_view_top_rated_movie"
        app:layout_constraintStart_toStartOf="@id/recycler_view_top_rated_movie"
        app:layout_constraintTop_toTopOf="@id/recycler_view_top_rated_movie"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_topratedblank_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#191919"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_top_rated_movie"
        tools:layout_editor_absoluteX="62dp" />

    <TextView
        android:id="@+id/text_upcoming_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#191919"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:text="Upcoming Movies"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_topratedblank_movie" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_upcoming_movie"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#191919"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_upcoming_movie" />
    <TextView
        android:id="@+id/text_upcomingblank_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#191919"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_upcoming_movie"
        tools:layout_editor_absoluteX="62dp" />

    <ProgressBar
        android:id="@+id/progress_bar_upcoming_movie"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/recycler_view_upcoming_movie"
        app:layout_constraintEnd_toEndOf="@id/recycler_view_upcoming_movie"
        app:layout_constraintStart_toStartOf="@id/recycler_view_upcoming_movie"
        app:layout_constraintTop_toTopOf="@id/recycler_view_upcoming_movie"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/text_now_playing_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#191919"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:text="Now Playing Movies"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_upcomingblank_movie" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_now_playing_movie"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#191919"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_now_playing_movie" />

    <ProgressBar
        android:id="@+id/progress_bar_now_playing_movie"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/recycler_view_now_playing_movie"
        app:layout_constraintEnd_toEndOf="@id/recycler_view_now_playing_movie"
        app:layout_constraintStart_toStartOf="@id/recycler_view_now_playing_movie"
        app:layout_constraintTop_toTopOf="@id/recycler_view_now_playing_movie"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_nowplayingblank_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#191919"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_now_playing_movie"
        tools:layout_editor_absoluteX="62dp" />



</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>